<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".phale">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="फळे"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/txt_bg"
        android:padding="10dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <HorizontalScrollView
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/apple"
                    android:src="@drawable/apple"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="सफरचंद"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/banana"
                    android:src="@drawable/banana"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="केळी"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/anjir"
                    android:src="@drawable/anjir"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="अंजीर"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/grapes"
                    android:src="@drawable/grapes"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="द्राक्षे"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mango"
                    android:src="@drawable/mango"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="आंबा"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dalimb"
                    android:src="@drawable/dalimb"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="डाळिंब"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/strawberries"
                    android:src="@drawable/strawberries"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="स्ट्राबेरी"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/santri"
                    android:src="@drawable/santri"
                    android:layout_marginTop="10dp"
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:text="संत्री"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>


</LinearLayout>